{
    "name": "dotherightthing/wpdtrt-plugin",
    "description": "Base classes for a plugin, plugin shortcode, and plugin widget.",
    "type": "library",
    "minimum-stability": "stable",
    "config": {
        "vendor-dir": "vendor"
    },
    "authors": [
        {
            "name": "Dan Smith",
            "email": "dev@dotherightthing.co.nz"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:dotherightthing/wpdtrt-debug.git",
            "no-api": true
        }
    ],
    "require": {
        "dotherightthing/wpdtrt-debug": "^1.0.0",
        "gamajo/template-loader": "^1.3.0",
        "php": ">=5.6.30",
        "phpdocumentor/phpdocumentor": "2.*",
        "phpunit/phpunit": "^5.7",
        "psy/psysh" : "~0.6",
        "wp-cli/wp-cli" : "~0.22"
    },
    "autoload": {
        "psr-4": {
            "DoTheRightThing\\WPPlugin\\": "src"
        }
    }
}
