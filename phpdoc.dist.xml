<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <title>wpdtrt-plugin-boilerplate</title>
  <parser>
    <target>docs/phpdoc</target>
  </parser>
  <transformer>
    <target>docs/phpdoc</target>
  </transformer>
  <transformations>
	 <template name="clean" />
  </transformations>
  <files>
    <directory>.</directory>
    <ignore>bin/*</ignore>
    <ignore>node_modules/*</ignore>
    <ignore>tests/bootstrap.php</ignore>
    <ignore>tests/generated-plugin/src/index.php</ignore>
    <ignore>vendor/*</ignore>
  </files>
</phpdoc>